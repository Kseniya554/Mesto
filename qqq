   const elementHtml = (text) => {
     const html = `
     <figure class="element">
               <button class="element__delete" type="button" value=" "></button>
               <img class="element__image" src="./images/Dombai.png" alt="Домбай">
               <div class="element__rectangel">
                   <h2 class="element__title"></h2>
                   <button type="button" class="element__button" value=" "></button>
               </div>
           </figure>
`

      const tempEl = document.createElement ('div');
      tempEl.insertAdjacentHTML('afterbegin', html);
      const el = tempEl.querySelector('.element');
      const titleEl = el.querySelector('.element__title');
      titleEl.textContent = text;
      return el;
  }


