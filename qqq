const container = document.querySelector('.elments');
const elmentsTemplate = document.querySelector('#cards').content;
const item = elmentsTemplateTemplate.content.cloneNode(true);
const placeName = initialCards.map(item => item.name);
const placeLink = initialCards.map(item => item.link);

const elementInfo = initialCards.map(function (item) {
    return {
      name: item.name,
      link: item.link
    };
  });
  
  function render() {
    elementInfo.forEach(renderCard);
  }
  
  function renderCard({ name, link }) {
    const elementEl = placeTemplate
      .querySelector('.element')
      .cloneNode(true);
      elementEl.querySelector('.element__title').textContent = name;
      elementEl.querySelector('.element__image').src = link;
  
    container.prepend(elementEl);
  }
  
  render();
